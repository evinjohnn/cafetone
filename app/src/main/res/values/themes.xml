<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base CaféTone Theme -->
    <style name="Theme.CaféTone" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/cafe_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/cafe_light</item>
        <item name="colorOnPrimaryContainer">@color/cafe_dark</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/cafe_brown</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/cafe_cream</item>
        <item name="colorOnSecondaryContainer">@color/cafe_dark</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/surface_elevated</item>
        <item name="colorOnSurface">@color/cafe_dark</item>
        <item name="colorSurfaceVariant">@color/surface_tonal</item>
        <item name="colorOnSurfaceVariant">@color/cafe_warm</item>
        <item name="colorSurfaceContainer">@color/surface_container</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/cafe_dark</item>
        
        <!-- Outline Colors -->
        <item name="colorOutline">@color/cafe_cream</item>
        <item name="colorOutlineVariant">@color/cafe_light</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/status_error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        
        <!-- System UI -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        
        <!-- Material 3 Shape System -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.CaféTone.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.CaféTone.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.CaféTone.LargeComponent</item>
        
        <!-- Enhanced Animation -->
        <item name="android:windowAnimationStyle">@style/Animation.CaféTone.Activity</item>
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>
    
    <!-- Dark Theme -->
    <style name="Theme.CaféTone.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        
        <!-- System UI -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.CaféTone.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.CaféTone.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    
    <style name="ShapeAppearance.CaféTone.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>
    
    <!-- Animation Styles -->
    <style name="Animation.CaféTone.Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
    
    <!-- Enhanced Widget Styles -->
    <style name="Widget.CaféTone.MaterialSwitch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/cafe_accent</item>
        <item name="trackTint">@color/cafe_cream</item>
        <item name="trackTintMode">src_in</item>
    </style>
    
    <style name="Widget.CaféTone.Slider" parent="Widget.Material3.Slider">
        <item name="thumbColor">@color/cafe_accent</item>
        <item name="trackColorActive">@color/cafe_accent</item>
        <item name="trackColorInactive">@color/cafe_cream</item>
        <item name="haloColor">@color/cafe_accent</item>
        <item name="trackHeight">10dp</item>
        <item name="thumbRadius">16dp</item>
        <item name="haloRadius">28dp</item>
    </style>
    
    <style name="Widget.CaféTone.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/cafe_accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="iconTint">@color/white</item>
    </style>
    
    <style name="Widget.CaféTone.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/cafe_accent</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/cafe_accent</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="iconTint">@color/cafe_accent</item>
    </style>
    
    <style name="Widget.CaféTone.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface_elevated</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeColor">@color/cafe_cream</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <style name="Widget.CaféTone.Card.Header" parent="Widget.CaféTone.Card">
        <item name="cardBackgroundColor">@color/cafe_accent</item>
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">12dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <!-- Text Appearances -->
    <style name="TextAppearance.CaféTone.Headline" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="fontFamily">@font/cafe_display</item>
    </style>
    
    <style name="TextAppearance.CaféTone.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/cafe_brown</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.CaféTone.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/cafe_warm</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <style name="TextAppearance.CaféTone.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/cafe_warm</item>
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.7</item>
    </style>
    
    <!-- Status Text Styles -->
    <style name="TextAppearance.CaféTone.Status" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/cafe_brown</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.CaféTone.Status.Active" parent="TextAppearance.CaféTone.Status">
        <item name="android:textColor">@color/status_success</item>
    </style>
    
    <style name="TextAppearance.CaféTone.Status.Warning" parent="TextAppearance.CaféTone.Status">
        <item name="android:textColor">@color/status_warning</item>
    </style>
    
    <style name="TextAppearance.CaféTone.Status.Error" parent="TextAppearance.CaféTone.Status">
        <item name="android:textColor">@color/status_error</item>
    </style>
</resources>