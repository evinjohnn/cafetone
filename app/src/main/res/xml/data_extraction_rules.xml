<data-extraction-rules>
    <cloud-backup>
        <!-- Include all app data in cloud backup -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <include domain="file" path="."/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Include all app data in device transfer -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <include domain="file" path="."/>
    </device-transfer>
</data-extraction-rules> 